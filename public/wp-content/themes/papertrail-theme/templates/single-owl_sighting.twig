{% extends "base.twig" %}

{% block content %}
  <article class="owl-single">
    <h1>{{ post.title ?: 'Unknown Species' }}</h1>
    <p><strong>Date Spotted:</strong> {{ post.meta('owl_date_spotted') ?: 'Unknown date' }}</p>
    <p><strong>Species:</strong> {{ post.meta('owl_species') ?: 'Unknown species' }}</p>
    <p><strong>Location:</strong> {{ post.meta('owl_location') ?: 'Unknown location' }}</p>
    <p><strong>Notes:</strong> {{ post.meta('owl_notes') ?: 'No notes provided' }}</p>
  </article>
{% endblock %}
